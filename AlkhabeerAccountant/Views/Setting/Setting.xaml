<shared:BaseWindow
    xmlns:shared="clr-namespace:AlkhabeerAccountant.Shared"
    x:Class="AlkhabeerAccountant.Views.Setting.Setting"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    FlowDirection="RightToLeft"
    TitleText="الإعدادات"
    Height="720" Width="960"
    Background="#F3F3F3">


    <Grid Margin="{StaticResource ContentMargin}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <!-- side menu -->
            <ColumnDefinition Width="*" />
            <!-- main content -->
        </Grid.ColumnDefinitions>

        <!-- 🔹 Side Menu -->
        <StackPanel Grid.Column="0" 
                    Background="#EAEAEA"
                    VerticalAlignment="Stretch">
            <Button Content="الشركة" Style="{StaticResource SideMenuButtonStyle}"/>
            <Button Content="حساب تكلفة المخزون" Style="{StaticResource SideMenuButtonStyle}"/>
            <Button Content="البنوك" Style="{StaticResource SideMenuButtonStyle}"/>
            <Button Content="الخزن" Style="{StaticResource SideMenuButtonStyle}"/>
            <Button Content="المستخدمين" Style="{StaticResource SideMenuButtonActiveStyle}"/>
            <Button Content="الضريبة" Style="{StaticResource SideMenuButtonStyle}"/>
            <Button Content="الخصومات" Style="{StaticResource SideMenuButtonStyle}"/>
            <Button Content="طرق الدفع" Style="{StaticResource SideMenuButtonStyle}"/>
            <Button Content="العملة" Style="{StaticResource SideMenuButtonStyle}"/>
        </StackPanel>

        <!-- 🔹 Main Content -->
        <Border Grid.Column="1"
                CornerRadius="10"
                Background="White"
                BorderBrush="#D0D0D0"
                BorderThickness="1"
                Padding="20"
                Margin="10,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 🧾 User Input Section -->
                <Border Grid.Row="0"
                        BorderBrush="#C8C8C8"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="15"
                        Background="#F9F9F9"
                        Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- اسم المستخدم -->
                        <TextBlock Text="اسم المستخدم" VerticalAlignment="Center" Margin="0,5" Grid.Row="0" Grid.Column="0"/>
                        <TextBox Text="محمد" Margin="5" Grid.Row="0" Grid.Column="1" Height="28"/>

                        <!-- الرقم السري -->
                        <TextBlock Text="الرقم السري" VerticalAlignment="Center" Margin="0,5" Grid.Row="1" Grid.Column="0"/>
                        <PasswordBox Password="123" Margin="5" Grid.Row="1" Grid.Column="1" Height="28"/>

                        <!-- الصلاحية -->
                        <TextBlock Text="الصلاحية" VerticalAlignment="Center" Margin="0,5" Grid.Row="2" Grid.Column="0"/>
                        <ComboBox Margin="5" Grid.Row="2" Grid.Column="1" Height="28" SelectedIndex="0">
                            <ComboBoxItem Content="كاشير"/>
                            <ComboBoxItem Content="مدير"/>
                            <ComboBoxItem Content="محاسب"/>
                        </ComboBox>

                        <!-- الحالة -->
                        <TextBlock Text="الحالة" VerticalAlignment="Center" Margin="0,5" Grid.Row="3" Grid.Column="0"/>
                        <StackPanel Orientation="Horizontal" Margin="5" Grid.Row="3" Grid.Column="1">
                            <RadioButton Content="نشط" IsChecked="True" Margin="5,0"/>
                            <RadioButton Content="غير نشط" Margin="5,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- 🧾 DataGrid -->
                <DataGrid Grid.Row="1"
                          AutoGenerateColumns="False"
                          HeadersVisibility="All"
                          IsReadOnly="True"
                          FontSize="14"
                          BorderBrush="#C8C8C8"
                          BorderThickness="1"
                          SelectionMode="Single"
                          RowHeight="30"
                          AlternatingRowBackground="#FFF8F8F8">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="اسم المستخدم" Binding="{Binding UserName}" Width="*"/>
                        <DataGridTextColumn Header="الصلاحية" Binding="{Binding Role}" Width="*"/>
                        <DataGridTextColumn Header="اخر دخول" Binding="{Binding LastLogin}" Width="*"/>
                        <DataGridTextColumn Header="اخر خروج" Binding="{Binding LastLogout}" Width="*"/>
                        <DataGridTextColumn Header="الحالة" Binding="{Binding Status}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- 🟢 Save / Delete Buttons -->
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,15,0,0"
                           >
                    <Button Content="حفظ"
                            Width="100" Height="38"
                            Background="#2E7D32"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderBrush="#1B5E20"
                            BorderThickness="1"/>
                    <Button Content="حذف"
                            Width="100" Height="38"
                            Background="#C62828"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderBrush="#B71C1C"
                            BorderThickness="1"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>

</shared:BaseWindow>
