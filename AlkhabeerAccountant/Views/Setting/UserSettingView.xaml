<UserControl x:Class="AlkhabeerAccountant.Views.Setting.UserSettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:cc="clr-namespace:AlkhabeerAccountant.CustomControls.SecondaryWindow"
             xmlns:helpers="clr-namespace:AlkhabeerAccountant.Helpers"
             mc:Ignorable="d"
             FlowDirection="RightToLeft"
             d:DesignHeight="650" d:DesignWidth="900">

    <Grid>
        <!-- Layout: main content + bottom buttons -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- =================== Main Card Container =================== -->
        <Border Grid.Row="0" Style="{StaticResource MainCardBorderStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Form -->
                    <RowDefinition Height="*"/>
                    <!-- Table -->
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- =================== User Form =================== -->
                <Grid Grid.Row="0" Margin="0,10,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 🧑‍💼 الاسم الكامل -->
                    <TextBlock Grid.Row="0" Grid.Column="0" 
                               Text="الاسم الكامل"
                               Style="{StaticResource InputLableTextBlock}" 
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1" 
                             x:Name="FullName"
                             Text="{Binding FullName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource RoundedTextInputStyle}" Margin="5"/>
                    <cc:PlaceholderText Grid.Row="0" Grid.Column="1"
                                        Placeholder="مثل : محمد مسعد الطحان"
                                        TargetTextBox="{Binding ElementName=FullName}"/>

                    <!-- 👤 اسم المستخدم -->
                    <TextBlock Grid.Row="1" Grid.Column="0"
                               Text="اسم المستخدم"
                               Style="{StaticResource InputLableTextBlock}" 
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="1" 
                             x:Name="Username"
                             Text="{Binding Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource RoundedTextInputStyle}" Margin="5"/>
                    <cc:PlaceholderText Grid.Row="1" Grid.Column="1"
                                        Placeholder="يستخدم فى تسجيل الدخول للنظام. مثل : moh_tahan او محمد"
                                        TargetTextBox="{Binding ElementName=Username}"/>

                    <!-- 🔑 الرقم السري -->
                    <TextBlock Grid.Row="2" Grid.Column="0"
                               Text="الرقم السري"
                               Style="{StaticResource InputLableTextBlock}"
                               VerticalAlignment="Center"/>

                    <TextBox Grid.Row="2" Grid.Column="1"
                             x:Name="PasswordHash"
                             Text="{Binding PasswordHash, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource RoundedTextInputStyle}" Margin="5"/>

                    <cc:PlaceholderText Grid.Row="2" Grid.Column="1"
                    Placeholder="مثل : 123 أو يمكن أن يكون بدون رقم سري"
                    TargetTextBox="{Binding ElementName=PasswordHash}"/>

                    <!-- ⚙️ الصلاحية -->
                    <TextBlock Grid.Row="3" Grid.Column="0"
                               Text="الصلاحية"
                               Style="{StaticResource InputLableTextBlock}" 
                               VerticalAlignment="Center"/>
                    <ListBox x:Name="RolesListBox"
         ItemsSource="{Binding Roles}"
         DisplayMemberPath="Name"
         SelectionMode="Multiple"
         SelectionChanged="RolesListBox_SelectionChanged" />

                    <!-- ✅ الحالة -->
                    <cc:StatusSelector Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                                       IsActive="{Binding IsActive, Mode=TwoWay}" />
                </Grid>

                <!-- =================== Users Table =================== -->
                <Border Grid.Row="1" Style="{StaticResource TableBorderStyle}" Margin="0,10,0,0">
                    <DataGrid ItemsSource="{Binding Items}"
                              SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                              AutoGenerateColumns="False"
                              Style="{StaticResource TableStyle}"
                              LoadingRow="DataGrid_LoadingRow">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="اسم المستخدم" Binding="{Binding Username}" Width="*"/>
                            <DataGridTextColumn Header="الاسم الكامل" Binding="{Binding FullName}" Width="2*"/>
                            <DataGridTextColumn Header="الصلاحية" Binding="{Binding RoleNames}" Width="1.5*"/>
                            <DataGridTextColumn Header="الحالة" Binding="{Binding IsActive, Converter={StaticResource BoolToStatusConverter}}"
                                                CellStyle="{StaticResource StatusCellStyle}" Width="70"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>
        </Border>

        <!-- =================== Bottom Buttons =================== -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
            <Button Content="حفظ"
                    Command="{Binding SaveOrUpdateCommand}"
                    Style="{StaticResource SaveButtonStyle}" Margin="5"/>
            <Button Content="حذف"
                    Command="{Binding DeleteCommand}"
                    Style="{StaticResource DeleteButtonStyle}" Margin="5"/>
        </StackPanel>
    </Grid>
</UserControl>
