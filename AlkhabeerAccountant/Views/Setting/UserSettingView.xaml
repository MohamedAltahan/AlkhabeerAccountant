<UserControl x:Class="AlkhabeerAccountant.Views.Setting.UserSettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:cc="clr-namespace:AlkhabeerAccountant.CustomControls.SecondaryWindow"
             mc:Ignorable="d"
             FlowDirection="RightToLeft"
             d:DesignHeight="650" d:DesignWidth="900">

    <Grid>
        <!-- Layout: main content + bottom buttons -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- =================== Main Card Container =================== -->
        <Border Grid.Row="0" Style="{StaticResource MainCardBorderStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <!-- =================== User Form =================== -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 🧑‍💼 الاسم الكامل -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="الاسم الكامل"
                               Style="{StaticResource InputLableTextBlock}" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1" x:Name="FullName" IsEnabled="{Binding IsFormEnabled}"
                             Text="{Binding FullName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource RoundedTextInputStyle}" />
                    <cc:PlaceholderText Grid.Row="0" Grid.Column="1"  Placeholder="مثل : محمد مسعد الطحان"
                        TargetTextBox="{Binding ElementName=FullName}"/>

                    <!-- 👤 اسم المستخدم -->
                    <TextBlock  Text="اسم المستخدم"   Grid.Row="1" Grid.Column="0"
                               Style="{StaticResource InputLableTextBlock}" VerticalAlignment="Center"/>
                    <TextBox  Grid.Row="1" Grid.Column="1" x:Name="Username" IsEnabled="{Binding IsFormEnabled}"
                             Text="{Binding Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource RoundedTextInputStyle}" />
                    <cc:PlaceholderText Grid.Row="1" Grid.Column="1" 
                                        Placeholder="يستحدم فى تسجيل الدخول للنظام. مثل : moh_tahan او محمد"
                        TargetTextBox="{Binding ElementName=Username}"/>

                    <!-- 🔑 الرقم السري -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="الرقم السري"
                               Style="{StaticResource InputLableTextBlock}" VerticalAlignment="Center"/>
                    <TextBox     Grid.Row="2" Grid.Column="1" x:Name="password" IsEnabled="{Binding IsFormEnabled}"
                                 Text="{Binding PasswordHash, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource RoundedTextInputStyle}"/>
                    <cc:PlaceholderText Grid.Row="2" Grid.Column="1"
                                        Placeholder="مثل : 123 او يمكن ان يكون بدون رقم سري"
                        TargetTextBox="{Binding ElementName=password}"/>

                    <!-- ⚙️ الصلاحية (ComboBox) -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="الصلاحية" 
                               Style="{StaticResource InputLableTextBlock}" VerticalAlignment="Center"/>
                    <ComboBox Grid.Row="3" Grid.Column="1"
                              ItemsSource="{Binding Roles}"
                              SelectedValuePath="Id"
                              DisplayMemberPath="Name"
                              IsEnabled="{Binding IsFormEnabled}"
                              SelectedValue="{Binding RoleId, Mode=TwoWay}"
                              Style="{StaticResource RoundedComboBoxStyle}" />

                    <!-- الحالة -->
                    <cc:StatusSelector Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"
                                       IsEnabled="{Binding IsFormEnabled}"
                                       IsActive="{Binding IsActive, Mode=TwoWay}" />
                </Grid>

                <!-- =================== Users Table =================== -->
                <Border Grid.Row="1" Style="{StaticResource TableBorderStyle}" Margin="0,10,0,0">
                    <DataGrid ItemsSource="{Binding Items}"
                              SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                              AutoGenerateColumns="False"
                              LoadingRow="DataGrid_LoadingRow"
                              Style="{StaticResource TableStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="اسم المستخدم" Binding="{Binding Username}" Width="*"/>
                            <DataGridTextColumn Header="الاسم الكامل" Binding="{Binding FullName}" Width="2*"/>
                            <DataGridTextColumn Header="الصلاحية" Binding="{Binding Role.Name}" Width="1.5*"/>
                            <DataGridTextColumn Header="الحالة" Binding="{Binding IsActive, Converter={StaticResource BoolToStatusConverter}}" 
                                               CellStyle="{StaticResource StatusCellStyle}" Width="70"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
                <cc:PaginationControl Grid.Row="2" DataContext="{Binding}" />
            </Grid>
        </Border>

        <!-- =================== Bottom Buttons =================== -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" >
            <Button Command="{Binding SaveOrUpdateCommand}"
                    Style="{StaticResource SaveButtonStyle}"
                    IsEnabled="{Binding IsSaveEnabled}"
                    Margin="0,0,190,0"/>

            <Button Command="{Binding AddCommand}"
                    Style="{StaticResource AddButtonStyle}"/>

            <Button Command="{Binding EditCommand}"
                    Style="{StaticResource EditButtonStyle}"
                    IsEnabled="{Binding IsEditEnabled}"/>

            <Button Command="{Binding DeleteCommand}"
                    Style="{StaticResource DeleteButtonStyle}"
                    IsEnabled="{Binding IsDeleteEnabled}"/>
        </StackPanel>
    </Grid>
</UserControl>