<UserControl x:Class="AlkhabeerAccountant.Views.Setting.TreasurySettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:cc="clr-namespace:AlkhabeerAccountant.CustomControls.SecondaryWindow"
             mc:Ignorable="d"
             FlowDirection="RightToLeft"
             d:DesignHeight="650" d:DesignWidth="900">

    <Grid>
        <!-- Define Rows: main content + bottom buttons -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ===================  Main Border Container =================== -->
        <Border Grid.Row="0" Style="{StaticResource MainCardBorderStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <!-- ===================  Treasury Form Section =================== -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition Width="*"/>
                        <!-- Full-width inputs -->
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- اسم الخزنة -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="اسم الخزنة" Style="{StaticResource InputLableTextBlock}" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Style="{StaticResource RoundedTextInputStyle}" />

                    <!-- المستخدم المسؤول عن الخزنة -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="المستخدم المسؤول عن الخزنة" Style="{StaticResource InputLableTextBlock}" VerticalAlignment="Center"/>
                    <ComboBox Grid.Row="1" Grid.Column="1" Style="{StaticResource RoundedComboBoxStyle}"  SelectedIndex="0">
                        <ComboBoxItem Content="محمد"/>
                        <ComboBoxItem Content="أحمد"/>
                        <ComboBoxItem Content="فاطمة"/>
                    </ComboBox>

                    <!-- الرصيد الافتتاحي -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="الرصيد الافتتاحي" Style="{StaticResource InputLableTextBlock}" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Style="{StaticResource RoundedTextInputStyle}" />

                    <!-- الرصيد الحالي -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="الرصيد الحالي (يُحدث تلقائيًا)" Style="{StaticResource InputLableTextBlock}" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="3" Grid.Column="1" Style="{StaticResource RoundedTextInputStyle}" />

                    <!-- ملاحظات -->
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="ملاحظات" Style="{StaticResource InputLableTextBlock}" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="4" Grid.Column="1" Style="{StaticResource RoundedTextInputStyle}"/>

                    <!-- الحالة -->
                    <cc:StatusSelector Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" IsActive="{Binding IsActive, Mode=TwoWay}" />
                </Grid>

                <!-- ===================  Treasury Table Section =================== -->
                <Border Grid.Row="1" Style="{StaticResource TableBorderStyle}">
                    <DataGrid Style="{StaticResource TableStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="اسم الخزنة" Binding="{Binding TreasuryName}" Width="*"/>
                            <DataGridTextColumn Header="الرصيد الحالي" Binding="{Binding CurrentBalance}" Width="*"/>
                            <DataGridTextColumn Header="الحالة" Binding="{Binding IsActive, Converter={StaticResource BoolToStatusConverter}}" 
                                                CellStyle="{StaticResource StatusCellStyle}" Width="70"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
                <cc:PaginationControl Grid.Row="2" DataContext="{Binding}" />
            </Grid>
        </Border>

        <!-- ===================  Bottom Buttons Outside Border =================== -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" >
            <Button Command="{Binding SaveOrUpdateCommand}"
                    Style="{StaticResource SaveButtonStyle}"
                    IsEnabled="{Binding IsSaveEnabled}"
                    Margin="0,0,190,0"/>

            <Button Command="{Binding AddCommand}"
                    Style="{StaticResource AddButtonStyle}"/>

            <Button Command="{Binding EditCommand}"
                    Style="{StaticResource EditButtonStyle}"
                    IsEnabled="{Binding IsEditEnabled}"/>

            <Button Command="{Binding DeleteCommand}"
                    Style="{StaticResource DeleteButtonStyle}"
                    IsEnabled="{Binding IsDeleteEnabled}"/>
        </StackPanel>
    </Grid>
</UserControl>
