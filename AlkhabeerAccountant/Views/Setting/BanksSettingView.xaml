<UserControl x:Class="AlkhabeerAccountant.Views.Setting.BanksSettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cc="clr-namespace:AlkhabeerAccountant.CustomControls.SecondaryWindow"
             Background="Transparent" >

    <Grid FlowDirection="RightToLeft">
        <!-- Define Rows: main content + bottom buttons -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ======================= Main Border Container ======================== -->
        <Border Grid.Row="0" Style="{StaticResource MainCardBorderStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <!-- =======================  Bank Form Section ======================== -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- اسم البنك -->
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="اسم البنك"
                               Style="{StaticResource InputLableTextBlock}"
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1"
                             Text="{Binding BankName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged }"
                             Style="{StaticResource RoundedTextInputStyle}"/>

                    <!-- اسم الحساب -->
                    <TextBlock Grid.Row="1" Grid.Column="0"
                               Text="اسم الحساب"
                               Style="{StaticResource InputLableTextBlock}"
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="1"
                             Text="{Binding AccountName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource RoundedTextInputStyle}"/>

                    <!-- رقم الحساب -->
                    <TextBlock Grid.Row="2" Grid.Column="0"
                               Text="رقم الحساب"
                               Style="{StaticResource InputLableTextBlock}"
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Row="2" Grid.Column="1"
                             Text="{Binding AccountNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource RoundedTextInputStyle}"/>

                    <!-- رقم IBAN -->
                    <TextBlock Grid.Row="3" Grid.Column="0"
                               Text="رقم IBAN"
                               Style="{StaticResource InputLableTextBlock}"
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Row="3" Grid.Column="1"
                             Text="{Binding Iban, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource RoundedTextInputStyle}"/>

                    <!-- ملاحظات -->
                    <TextBlock Grid.Row="4" Grid.Column="0"
                               Text="ملاحظات"
                               Style="{StaticResource InputLableTextBlock}"
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Row="4" Grid.Column="1"
                             Text="{Binding Notes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource RoundedTextInputStyle}"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"/>

                    <!-- الحالة -->
                    <cc:StatusSelector Grid.Row="5"
                                       Grid.Column="0"
                                       Grid.ColumnSpan="2"
                                       IsActive="{Binding IsActive, Mode=TwoWay}" />
                </Grid>

                <!-- =======================  DataGrid Section ======================== -->
                <Border Grid.Row="1" Style="{StaticResource TableBorderStyle}">
                    <DataGrid Grid.Row="1"
          ItemsSource="{Binding Items}"
          SelectedItem="{Binding SelectedBank, Mode=TwoWay}"
          Style="{StaticResource TableStyle}"
          AutoGenerateColumns="False"
          CanUserAddRows="False"
          LoadingRow="DataGrid_LoadingRow">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="اسم البنك" Binding="{Binding BankName}" Width="*"/>
                            <DataGridTextColumn Header="اسم الحساب" Binding="{Binding AccountName}" Width="*"/>
                            <DataGridTextColumn Header="رقم الحساب" Binding="{Binding AccountNumber}" Width="*"/>
                            <DataGridTextColumn Header="رقم IBAN" Binding="{Binding Iban}" Width="*"/>
                            <DataGridTextColumn Header="الحالة" Binding="{Binding IsActive, Converter={StaticResource BoolToStatusConverter}}" Width="100">
                                <DataGridTextColumn.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                <Setter Property="Background" Value="#C9F7C1"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                <Setter Property="Background" Value="#F7C1C1"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.CellStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>

                <!-- Pagination controls -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Style="{StaticResource PaginationPrevButtonStyle}"
                    Command="{Binding PreviousPageCommand}"/>

                    <TextBlock Text="{Binding PageInfo}"
                       VerticalAlignment="Center"
                       FontWeight="Bold"
                       Margin="10,0" />

                    <Button Style="{StaticResource PaginationNextButtonStyle}"
                    Command="{Binding NextPageCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ======================= Bottom Buttons Outside Border ======================== -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <!-- Save Button -->
            <Button Content="حفظ"
                    Command="{Binding SaveCommand}"
                    Style="{StaticResource SaveButtonStyle}"/>

            <!-- Delete Button -->
            <Button Content="حذف"
                    Command="{Binding DeleteCommand}"
                    Style="{StaticResource DeleteButtonStyle}"/>
        </StackPanel>
    </Grid>
</UserControl>
