<UserControl x:Class="AlkhabeerAccountant.Views.Setting.UsersSettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:cc="clr-namespace:AlkhabeerAccountant.CustomControls.SecondaryWindow"
             mc:Ignorable="d"
             FlowDirection="RightToLeft"
             d:DesignHeight="650" d:DesignWidth="900">

    <Grid>
        <!-- Layout: main content + bottom buttons -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- =================== Main Card Container =================== -->
        <Border Grid.Row="0" Style="{StaticResource MainCardBorderStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Form -->
                    <RowDefinition Height="*"/>
                    <!-- Table -->
                </Grid.RowDefinitions>

                <!-- =================== User Form =================== -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 🧑‍💼 الاسم الكامل -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="الاسم الكامل"
                               Style="{StaticResource InputLableTextBlock}" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1" x:Name="FullName"
                             Text="{Binding FullName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource RoundedTextInputStyle}" Margin="5"/>
                    <cc:PlaceholderText Grid.Row="0" Grid.Column="1"  Placeholder="مثل : محمد مسعد الطحان"
                        TargetTextBox="{Binding ElementName=FullName}"/>

                    <!-- 👤 اسم المستخدم -->
                    <TextBlock  Text="اسم المستخدم"   Grid.Row="1" Grid.Column="0"
                               Style="{StaticResource InputLableTextBlock}" VerticalAlignment="Center"/>
                    <TextBox  Grid.Row="1" Grid.Column="1" x:Name="Username"
                             Text="{Binding Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource RoundedTextInputStyle}" Margin="5"/>
                    <cc:PlaceholderText Grid.Row="1" Grid.Column="1" 
                                        Placeholder="يستحدم فى تسجيل الدخول للنظام. مثل : moh_tahan او محمد"
                        TargetTextBox="{Binding ElementName=Username}"/>
                    
                    <!-- 🔑 الرقم السري -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="الرقم السري"
                               Style="{StaticResource InputLableTextBlock}" VerticalAlignment="Center"/>
                    <TextBox     Grid.Row="2" Grid.Column="1" x:Name="password"
                                 Text="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource RoundedTextInputStyle}"/>
                    <cc:PlaceholderText Grid.Row="2" Grid.Column="1"
                                        Placeholder="مثل : 123 او يمكن ان يكون بدون رقم سري"
                        TargetTextBox="{Binding ElementName=password}"/>
                    
                    <!-- ⚙️ الصلاحية (ComboBox) -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="الصلاحية"
                               Style="{StaticResource InputLableTextBlock}" VerticalAlignment="Center"/>
                    <ComboBox Grid.Row="3" Grid.Column="1"
                              ItemsSource="{Binding Roles}"
                              SelectedValuePath="Id"
                              DisplayMemberPath="Name"
                              SelectedValue="{Binding SelectedRoleId, Mode=TwoWay}"
                              Style="{StaticResource RoundedComboBoxStyle}" Margin="5"/>

                    <!-- الحالة -->
                    <cc:StatusSelector Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"
                                       IsActive="{Binding IsActive, Mode=TwoWay}" />
                </Grid>

                <!-- =================== Users Table =================== -->
                <Border Grid.Row="1" Style="{StaticResource TableBorderStyle}" Margin="0,10,0,0">
                    <DataGrid ItemsSource="{Binding Items}"
                              SelectedItem="{Binding SelectedUser, Mode=TwoWay}"
                              AutoGenerateColumns="False"
                              Style="{StaticResource TableStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="اسم المستخدم" Binding="{Binding Username}" Width="*"/>
                            <DataGridTextColumn Header="الاسم الكامل" Binding="{Binding FullName}" Width="2*"/>
                            <DataGridTextColumn Header="الصلاحية" Binding="{Binding RoleNames}" Width="1.5*"/>
                            <DataGridCheckBoxColumn Header="نشط" Binding="{Binding IsActive}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>
        </Border>

        <!-- =================== Bottom Buttons =================== -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,25,0,15">
            <Button Content="حفظ" Command="{Binding SaveCommand}" Style="{StaticResource SaveButtonStyle}" Margin="5"/>
            <Button Content="حذف" Command="{Binding DeleteCommand}" Style="{StaticResource DeleteButtonStyle}" Margin="5"/>
            <Button Content="جديد" Command="{Binding ClearFormCommand}" Style="{StaticResource EditButtonStyle}" Margin="5"/>
        </StackPanel>
    </Grid>
</UserControl>
