<UserControl x:Class="AlkhabeerAccountant.Views.Setting.InventoryCostView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">

    <Grid FlowDirection="RightToLeft" >
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Content Border -->
        <Border Grid.Row="0" Style="{StaticResource MainCardBorderStyle}">
            <StackPanel>
                <TextBlock Text="هنا يتم تعريف كيفية حساب تكلفة البضاعة عند دخول كميات بأسعار مختلفة لنفس المنتج ويعتمد حساب التقارير والأرباح والخسائر على ذلك."
                           Style="{StaticResource HeaderTextBlock}"
                           TextWrapping="Wrap"
                           Margin="0,0,0,25"/>

                <StackPanel Orientation="Vertical" Margin="20,10,20,0">
                    <RadioButton GroupName="CostMethod"
                                 Content="متوسط التكلفة"
                                 IsChecked="True"
                                 Style="{StaticResource BlueRadioButtonStyle}"
                                 Margin="0,5"/>
                    <RadioButton GroupName="CostMethod"
                                 Content="آخر سعر شراء"
                                 Style="{StaticResource BlueRadioButtonStyle}"
                                 Margin="0,5"/>
                    <RadioButton GroupName="CostMethod"
                                 Content="أقل سعر شراء"
                                 Style="{StaticResource BlueRadioButtonStyle}"
                                 Margin="0,5"/>
                    <RadioButton GroupName="CostMethod"
                                 Content="أعلى سعر شراء"
                                 Style="{StaticResource BlueRadioButtonStyle}"
                                 Margin="0,5"/>
                    <RadioButton GroupName="CostMethod"
                                 Content="حسب تكلفة كل دفعة كما دخلت (FIFO)"
                                 Style="{StaticResource BlueRadioButtonStyle}"
                                 Margin="0,5"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Save Button OUTSIDE the border -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,25,0,0">
            <Button Content="حفظ"
                    Style="{StaticResource SaveButtonStyle}"/>
        </StackPanel>
    </Grid>
</UserControl>
