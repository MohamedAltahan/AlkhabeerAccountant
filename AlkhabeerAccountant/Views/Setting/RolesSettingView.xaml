<UserControl x:Class="AlkhabeerAccountant.Views.Setting.RolesSettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             FlowDirection="RightToLeft"
             d:DesignHeight="650" d:DesignWidth="900">

    <Grid>
        <!-- main content + bottom buttons -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ===================  Main Border Container =================== -->
        <Border Grid.Row="0" Style="{StaticResource MainCardBorderStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Form -->
                    <RowDefinition Height="*"/>
                    <!-- Table -->
                </Grid.RowDefinitions>

                <!-- ===================  Role Form Section =================== -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                        <!-- full-width input -->
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- اسم الصلاحية -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="اسم الصلاحية" Style="{StaticResource InputLableTextBlock}" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Style="{StaticResource RoundedTextInputStyle}"/>

                    <!-- بيانات الصلاحية -->
                    <!--<TextBlock Grid.Row="1" Grid.Column="0" Text="بيانات الصلاحية" Style="{StaticResource InputLableTextBlock}" VerticalAlignment="Center"/>-->

                    <!-- Green Add Permissions Button -->
                    <Button Grid.Row="1" Grid.Column="1"
                            Content="اضغط لإضافة الصلاحيات"
                            Height="35"
                            Width="250"
                            Margin="10"
                            Style="{StaticResource SaveButtonStyle}"
                            />
                </Grid>

                <!-- ===================  Roles Table Section =================== -->
                <Border Grid.Row="1" Style="{StaticResource TableBorderStyle}">
                    <DataGrid Style="{StaticResource TableStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="اسم الصلاحية" Binding="{Binding RoleName}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>
        </Border>

        <!-- ===================  Bottom Buttons =================== -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,25,0,15" >
            <Button Content="حفظ" Style="{StaticResource SaveButtonStyle}"/>
            <Button Content="تعديل" Style="{StaticResource EditButtonStyle}"/>
            <Button Content="حذف" Style="{StaticResource DeleteButtonStyle}"/>
        </StackPanel>
    </Grid>
</UserControl>
