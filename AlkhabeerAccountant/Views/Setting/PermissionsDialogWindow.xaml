<shared:BaseWindow
     xmlns:shared="clr-namespace:AlkhabeerAccountant.Shared"
    x:Class="AlkhabeerAccountant.Views.Setting.PermissionsDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlkhabeerAccountant.Views.Setting"
        mc:Ignorable="d"
        FlowDirection="RightToLeft"
        TitleText="إختر الصلاحيات" Width="400" Height="300" >

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- SELECT ALL CHECKBOX -->
        <CheckBox Content="تحديد / إلغاء الكل"
              Style="{StaticResource RoundedCheckBoxStyle}"
              Foreground="{StaticResource PrimaryBrush}"
              FontSize="{StaticResource FontSize-4}"
              FontWeight="{StaticResource FontWeight-3}"
              IsChecked="{Binding IsAllSelected}"
              HorizontalAlignment="Center" />

        <!-- SCROLLABLE GROUPED PERMISSIONS -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding GroupedPermissions}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="10,0">

                            <!-- GROUP TITLE -->
                            <TextBlock Text="{Binding Key}"
                                       FontSize="{StaticResource FontSize-5}"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource PrimaryBrush}"
                                       Margin="0,2,0,5"/>

                            <!-- PERMISSIONS IN THIS GROUP -->
                            <ItemsControl ItemsSource="{Binding}">
                                <!-- MAKE ITEMS HORIZONTAL -->
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Content="{Binding Permission.DisplayName}" Style="{StaticResource RoundedCheckBoxStyle}"
                                                  Margin="5,0"
                                              IsChecked="{Binding IsSelected}"
                                              FontSize="{StaticResource FontSize-4}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <Separator Margin="0,10"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- SAVE BUTTON -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" >
            <Button Style="{StaticResource SaveButtonStyle}" Command="{Binding ConfirmCommand}"/>
            <Button  Style="{StaticResource CancelButtonStyle}" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</shared:BaseWindow>
