<UserControl x:Class="AlkhabeerAccountant.Views.Setting.CurrencyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:cc="clr-namespace:AlkhabeerAccountant.CustomControls.SecondaryWindow"
             mc:Ignorable="d"
             FlowDirection="RightToLeft" >

    <Grid>
        <!-- Define Rows: main content + bottom buttons -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <!-- Main Border Content -->
            <RowDefinition Height="Auto"/>
            <!-- Bottom Buttons -->
        </Grid.RowDefinitions>

        <!-- ===================  Main Border Container =================== -->
        <Border Grid.Row="0" Style="{StaticResource MainCardBorderStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Form -->
                    <RowDefinition Height="*"/>
                    <!-- Table -->
                </Grid.RowDefinitions>

                <!-- ===================  Currency Form Section =================== -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition Width="*"/>
                        <!-- Full-width inputs -->
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- اسم العملة بالعربي -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="اسم العملة بالعربي" Style="{StaticResource InputLableTextBlock}" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Style="{StaticResource RoundedTextInputStyle}"/>

                    <!-- رمز العملة بالعربي -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="رمز العملة بالعربي" Style="{StaticResource InputLableTextBlock}" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Style="{StaticResource RoundedTextInputStyle}"/>

                    <!-- اسم العملة بالانجليزي -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="اسم العملة بالانجليزي" Style="{StaticResource InputLableTextBlock}" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Style="{StaticResource RoundedTextInputStyle}"/>

                    <!-- رمز العملة بالانجليزي -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="رمز العملة بالانجليزي" Style="{StaticResource InputLableTextBlock}" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="3" Grid.Column="1" Style="{StaticResource RoundedTextInputStyle}"/>

                    <!-- هل العملة الأساسية للنظام -->
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="هل العملة الأساسية للنظام" Style="{StaticResource InputLableTextBlock}" VerticalAlignment="Center"/>
                    <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <RadioButton Content="نعم"
                 GroupName="IsPrimaryCurrency"
                 IsChecked="{Binding IsPrimaryCurrency, Mode=TwoWay}"
                 Style="{StaticResource BlueRadioButtonStyle}"/>
                        <RadioButton Content="لا"
                 GroupName="IsPrimaryCurrency" 
                 Style="{StaticResource BlueRadioButtonStyle}"/>
                    </StackPanel>
                </Grid>

                <!-- ===================  Currency Table Section =================== -->
                <Border Grid.Row="1" Style="{StaticResource TableBorderStyle}">
                    <DataGrid Style="{StaticResource TableStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="العملة عربي" Binding="{Binding CurrencyArabic}" Width="*"/>
                            <DataGridTextColumn Header="الرمز عربي" Binding="{Binding SymbolArabic}" Width="*"/>
                            <DataGridTextColumn Header="العملة انجليزي" Binding="{Binding CurrencyEnglish}" Width="*"/>
                            <DataGridTextColumn Header="الرمز انجليزي" Binding="{Binding SymbolEnglish}" Width="*"/>
                            <DataGridTextColumn Header="هل اساسية" Binding="{Binding IsPrimary}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>
        </Border>

        <!-- ===================  Bottom Buttons Outside Border =================== -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,25,0,15">
            <!-- Save Button -->
            <Button Content="حفظ" Style="{StaticResource SaveButtonStyle}"/>
            <!-- Delete Button -->
            <Button Content="حذف" Style="{StaticResource DeleteButtonStyle}"/>
        </StackPanel>
    </Grid>
</UserControl>
  