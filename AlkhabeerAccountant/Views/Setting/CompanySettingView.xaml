<UserControl x:Class="AlkhabeerAccountant.Views.Setting.CompanySettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             FlowDirection="RightToLeft"
             d:DesignHeight="620" d:DesignWidth="900">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 🔹 Form Container -->
        <Border Grid.Row="0" Style="{StaticResource MainCardBorderStyle}">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 🏢 اسم الشركة -->
                <TextBlock Style="{StaticResource InputLableTextBlock}" Text="اسم الشركة" Grid.Row="0" Grid.Column="0"/>
                <TextBox Style="{StaticResource RoundedTextInputStyle}"
                         Grid.Row="0" Grid.Column="1"
                         Text="{Binding CompanyName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <!-- 🏠 عنوان الشركة -->
                <TextBlock Style="{StaticResource InputLableTextBlock}" Text="عنوان الشركة" Grid.Row="1" Grid.Column="0"/>
                <TextBox Style="{StaticResource RoundedTextInputStyle}"
                         Grid.Row="1" Grid.Column="1"
                         Text="{Binding CompanyAddress, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <!-- 💼 النشاط -->
                <TextBlock Style="{StaticResource InputLableTextBlock}" Text="النشاط" Grid.Row="2" Grid.Column="0"/>
                <TextBox Style="{StaticResource RoundedTextInputStyle}"
                         Grid.Row="2" Grid.Column="1"
                         Text="{Binding CompanyActivity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <!-- ✉️ البريد الإلكتروني -->
                <TextBlock Style="{StaticResource InputLableTextBlock}" Text="البريد الإلكتروني" Grid.Row="3" Grid.Column="0"/>
                <TextBox Style="{StaticResource RoundedTextInputStyle}"
                         Grid.Row="3" Grid.Column="1"
                         Text="{Binding CompanyEmail, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <!-- 🌐 الويب سايت -->
                <TextBlock Style="{StaticResource InputLableTextBlock}" Text="الويب سايت" Grid.Row="4" Grid.Column="0"/>
                <TextBox Style="{StaticResource RoundedTextInputStyle}"
                         Grid.Row="4" Grid.Column="1"
                         Text="{Binding CompanyWebsite, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <!-- 💳 الرقم الضريبي -->
                <TextBlock Style="{StaticResource InputLableTextBlock}" Text="الرقم الضريبي" Grid.Row="5" Grid.Column="0"/>
                <TextBox Style="{StaticResource RoundedTextInputStyle}"
                         Grid.Row="5" Grid.Column="1"
                         Text="{Binding CompanyTaxNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <!-- 🧾 السجل التجاري -->
                <TextBlock Style="{StaticResource InputLableTextBlock}" Text="السجل التجاري" Grid.Row="6" Grid.Column="0"/>
                <TextBox Style="{StaticResource RoundedTextInputStyle}"
                         Grid.Row="6" Grid.Column="1"
                         Text="{Binding CompanyCommercialRegister, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <!-- 📱 رقم الموبايل -->
                <TextBlock Style="{StaticResource InputLableTextBlock}" Text="رقم الموبايل" Grid.Row="7" Grid.Column="0"/>
                <TextBox Style="{StaticResource RoundedTextInputStyle}"
                         Grid.Row="7" Grid.Column="1"
                         Text="{Binding CompanyPhone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <!-- 🧾 السطر الأخير في فاتورة المبيعات -->
                <TextBlock Style="{StaticResource InputLableTextBlock}" Text="السطر الأخير في فاتورة المبيعات" Grid.Row="8" Grid.Column="0"/>
                <TextBox Style="{StaticResource RoundedTextInputStyle}"
                         Grid.Row="8" Grid.Column="1"
                         Text="{Binding InvoiceFooterLine, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <!-- 📝 نص يظهر في آخر فاتورة المبيعات -->
                <TextBlock Style="{StaticResource InputLableTextBlock}" Text="نص يظهر في آخر فاتورة المبيعات" Grid.Row="9" Grid.Column="0"/>
                <TextBox Style="{StaticResource RoundedTextInputStyle}"
                         Grid.Row="9" Grid.Column="1"
                         Text="{Binding InvoiceNoteText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <!-- Logo selector -->
                <TextBlock Style="{StaticResource InputLableTextBlock}" Text="شعار الشركة" Grid.Row="10" Grid.Column="0"/>
                <Grid Grid.Row="10" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Button x:Name="UploadLogoButton"
                                Content="اختيار الشعار"
                                Style="{StaticResource GreenButtonStyle}"
                                Width="150" Height="40"
                                Command="{Binding UploadLogoCommand}"/>

                        <Border Width="120" Height="80" BorderBrush="#CCC" BorderThickness="1" CornerRadius="8"
                                Margin="30,0">
                            <Image Stretch="Uniform" Source="{Binding CompanyLogo}" />
                        </Border>
                        <Button x:Name="RemoveLogoButton"
                                Content="إزالة"
                                Style="{StaticResource RedButtonStyle}"
                                Width="100" Height="40"
                                Command="{Binding RemoveLogoCommand}"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- 🔹 Save Button -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Style="{StaticResource SaveButtonStyle}"
                    Command="{Binding SaveCommand}"/>

        </StackPanel>

    </Grid>
</UserControl>
