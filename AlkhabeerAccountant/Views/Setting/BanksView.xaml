<UserControl x:Class="AlkhabeerAccountant.Views.Setting.BanksView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cc="clr-namespace:AlkhabeerAccountant.CustomControls.SecondaryWindow"
             Background="Transparent">

    <Grid FlowDirection="RightToLeft">
        <!-- Define Rows: main content + bottom buttons -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <!-- Main Border Content -->
            <RowDefinition Height="Auto"/>
            <!-- Bottom Buttons -->
        </Grid.RowDefinitions>

        <!-- =======================
             Main Border Container
        ======================== -->
        <Border Grid.Row="0" Style="{StaticResource MainCardBorderStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Form -->
                    <RowDefinition Height="*"/>
                    <!-- Table -->
                </Grid.RowDefinitions>

                <!-- =======================
                     Bank Form Section
                ======================== -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- اسم البنك -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="اسم البنك" Style="{StaticResource InputLableTextBlock}" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Style="{StaticResource RoundedTextInputStyle}"/>

                    <!-- اسم الحساب -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="اسم الحساب" Style="{StaticResource InputLableTextBlock}" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Style="{StaticResource RoundedTextInputStyle}"/>

                    <!-- رقم الحساب -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="رقم الحساب" Style="{StaticResource InputLableTextBlock}" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Style="{StaticResource RoundedTextInputStyle}"/>

                    <!-- رقم IBAN -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="رقم IBAN" Style="{StaticResource InputLableTextBlock}" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="3" Grid.Column="1" Style="{StaticResource RoundedTextInputStyle}"/>

                    <!-- ملاحظات -->
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="ملاحظات" Style="{StaticResource InputLableTextBlock}" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="4" Grid.Column="1" Style="{StaticResource RoundedTextInputStyle}"/>

                    <!-- الحالة -->
                    <cc:StatusSelector Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" IsActive="{Binding IsActive, Mode=TwoWay}" />
                </Grid>

                <!-- =======================
                     DataGrid Section
                ======================== -->
                <Border Grid.Row="1" Style="{StaticResource TableBorderStyle}">
                    <DataGrid Grid.Row="1" Style="{StaticResource TableStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="اسم البنك" Binding="{Binding BankName}" Width="*"/>
                            <DataGridTextColumn Header="اسم الحساب" Binding="{Binding AccountName}" Width="*"/>
                            <DataGridTextColumn Header="رقم الحساب" Binding="{Binding AccountNumber}" Width="*"/>
                            <DataGridTextColumn Header="رقم IBAN" Binding="{Binding IBAN}" Width="*"/>
                            <DataGridTextColumn Header="الحالة" Binding="{Binding Status}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>
        </Border>

        <!-- =======================
             Bottom Buttons Outside Border
        ======================== -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,25,0,15">
            <!-- Save Button -->
            <Button Content="حفظ"  Style="{StaticResource SaveButtonStyle}"/>
            <!-- Delete Button -->
            <Button Content="حذف"  Style="{StaticResource DeleteButtonStyle}"/>
        </StackPanel>
    </Grid>
</UserControl>
