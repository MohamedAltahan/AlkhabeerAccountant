<UserControl x:Class="AlkhabeerAccountant.Views.Setting.UsersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:cc="clr-namespace:AlkhabeerAccountant.CustomControls.SecondaryWindow"
             mc:Ignorable="d"
             FlowDirection="RightToLeft"
             d:DesignHeight="600" d:DesignWidth="900">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 🧾 User Input Section -->
        <Border Grid.Row="0" Style="{StaticResource MainCardBorderStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- اسم المستخدم -->
                    <TextBlock Text="اسم المستخدم"
                               Style="{StaticResource InputLableTextBlock}"
                               Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
                    <TextBox Style="{StaticResource RoundedTextInputStyle}"
                             Text="محمد" Margin="5" Grid.Row="0" Grid.Column="1" />

                    <!-- الرقم السري -->
                    <TextBlock Text="الرقم السري"
                               Style="{StaticResource InputLableTextBlock}"
                               Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
                    <TextBox Style="{StaticResource RoundedTextInputStyle}"
                             Text="123" Margin="5" Grid.Row="1" Grid.Column="1" />

                    <!-- الصلاحية -->
                    <TextBlock Text="الصلاحية"
                               Style="{StaticResource InputLableTextBlock}"
                               Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
                    <ComboBox Style="{StaticResource RoundedComboBoxStyle}"
                              Margin="5" Grid.Row="2" Grid.Column="1"  SelectedIndex="0">
                        <ComboBoxItem Content="كاشير"/> 
                        <ComboBoxItem Content="مدير"/>
                        <ComboBoxItem Content="محاسب"/>
                    </ComboBox>

                    <cc:StatusSelector Grid.Row="3" Grid.Column="0"
                       Grid.ColumnSpan="2"
                       IsActive="{Binding IsActive, Mode=TwoWay}" />
                </Grid>

                <!-- 📋 DataGrid (now inside the same Border) -->
                <Border Grid.Row="1" Style="{StaticResource TableBorderStyle}">
                    <DataGrid Style="{StaticResource TableStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="اسم المستخدم" Binding="{Binding UserName}" Width="*"/>
                            <DataGridTextColumn Header="الصلاحية" Binding="{Binding Role}" Width="*"/>
                            <DataGridTextColumn Header="اخر دخول" Binding="{Binding LastLogin}" Width="*"/>
                            <DataGridTextColumn Header="اخر خروج" Binding="{Binding LastLogout}" Width="*"/>
                            <DataGridTextColumn Header="الحالة" Binding="{Binding Status}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>
        </Border>

        <!-- 🟢 Save / Delete Buttons -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,15,0,0">
            <Button Content="حفظ" Style="{StaticResource SaveButtonStyle}" />
            <Button Content="حذف" Style="{StaticResource DeleteButtonStyle}" />
        </StackPanel>
    </Grid>
</UserControl>
