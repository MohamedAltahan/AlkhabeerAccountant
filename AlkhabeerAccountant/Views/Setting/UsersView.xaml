<UserControl x:Class="AlkhabeerAccountant.Views.Setting.UsersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             FlowDirection="RightToLeft"
             d:DesignHeight="600" d:DesignWidth="900">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 🧾 User Input Section -->
        <Border Grid.Row="0"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="{StaticResource BorderThick-1}"
                CornerRadius="{StaticResource ButtonCornerRadius}"
                Padding="{StaticResource ContentPadding}"
                Background="{StaticResource CardBackgroundBrush}"
                Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- اسم المستخدم -->
                <TextBlock Text="اسم المستخدم"
                           Style="{StaticResource InputLableTextBlock}"
                           Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
                <TextBox Style="{StaticResource RoundedInputStyle}"
                         Text="محمد" Margin="5" Grid.Row="0" Grid.Column="1" Height="28"/>

                <!-- الرقم السري -->
                <TextBlock Text="الرقم السري"
                           Style="{StaticResource InputLableTextBlock}"
                           Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
                <TextBox Style="{StaticResource RoundedInputStyle}"
                         Text="123" Margin="5" Grid.Row="1" Grid.Column="1" Height="28"/>

                <!-- الصلاحية -->
                <TextBlock Text="الصلاحية"
                           Style="{StaticResource InputLableTextBlock}"
                           Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
                <ComboBox Style="{StaticResource RoundedComboBoxStyle}"
                          Margin="5" Grid.Row="2" Grid.Column="1" Height="28" SelectedIndex="0">
                    <ComboBoxItem Content="كاشير"/>
                    <ComboBoxItem Content="مدير"/>
                    <ComboBoxItem Content="محاسب"/>
                </ComboBox>

                <!-- الحالة -->
                <TextBlock Text="الحالة"
                           Style="{StaticResource InputLableTextBlock}"
                           Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
                <StackPanel Orientation="Horizontal" Margin="5" Grid.Row="3" Grid.Column="1">
                    <RadioButton Content="نشط" IsChecked="True" Margin="5,0"/>
                    <RadioButton Content="غير نشط" Margin="5,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 📋 DataGrid -->
        <Border Grid.Row="1"
                CornerRadius="{StaticResource ButtonCornerRadius}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="{StaticResource BorderThick-1}"
                Background="{StaticResource CardBackgroundBrush}"
                Padding="2">
            <DataGrid AutoGenerateColumns="False"
                      HeadersVisibility="All"
                      IsReadOnly="True"
                      FontSize="14"
                      SelectionMode="Single"
                      RowHeight="30"
                      BorderThickness="0"
                      Background="Transparent"
                      AlternatingRowBackground="#FFF8F8F8">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="اسم المستخدم" Binding="{Binding UserName}" Width="*"/>
                    <DataGridTextColumn Header="الصلاحية" Binding="{Binding Role}" Width="*"/>
                    <DataGridTextColumn Header="اخر دخول" Binding="{Binding LastLogin}" Width="*"/>
                    <DataGridTextColumn Header="اخر خروج" Binding="{Binding LastLogout}" Width="*"/>
                    <DataGridTextColumn Header="الحالة" Binding="{Binding Status}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- 🟢 Save / Delete Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,15,0,0">
            <Button Content="حفظ" Style="{StaticResource SaveButtonStyle}" />
            <Button Content="حذف" Style="{StaticResource DeleteButtonStyle}" />
        </StackPanel>
    </Grid>
</UserControl>
