<UserControl x:Class="AlkhabeerAccountant.CustomControls.SecondaryWindow.StatusSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="Root"
             FlowDirection="RightToLeft">

    <Grid Margin="0,5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Label -->
        <TextBlock Text="الحالة"
                   Style="{StaticResource InputLableTextBlock}"
                   Grid.Column="0"
                   VerticalAlignment="Center" />

        <!-- Radio Buttons -->
        <StackPanel Grid.Column="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

            <!-- ✅ Active -->
            <RadioButton Content="نشط"
                         GroupName="StatusGroup"
                         IsChecked="{Binding IsActive, ElementName=Root, Mode=TwoWay}"
                         Margin="10,0"
                         Style="{StaticResource BlueRadioButtonStyle}" />

            <!-- ✅ Inactive -->
            <RadioButton Content="غير نشط"
                         GroupName="StatusGroup"
                         IsChecked="{Binding IsActive, ElementName=Root, Mode=TwoWay, Converter={StaticResource InverseBoolConverter}}"                         Margin="10,0"
                         Style="{StaticResource BlueRadioButtonStyle}" />
        </StackPanel>
    </Grid>
</UserControl>
