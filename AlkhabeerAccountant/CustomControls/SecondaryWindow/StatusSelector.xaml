<UserControl x:Class="AlkhabeerAccountant.CustomControls.SecondaryWindow.StatusSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AlkhabeerAccountant.CustomControls.SecondaryWindow"
             mc:Ignorable="d" 
             x:Name="Root"
             FlowDirection="RightToLeft">
    <UserControl.Resources>
        <!-- 🔹 Modern blue RadioButton style -->
    
    </UserControl.Resources>

    <!-- Layout -->
    <Grid Margin="0,5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Label -->
        <TextBlock Text="الحالة"
                   Style="{StaticResource InputLableTextBlock}"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                  />

        <!-- Radio buttons -->
        <StackPanel Grid.Column="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center" >

            <RadioButton Content="نشط"
                         IsChecked="{Binding IsActive, ElementName=Root, Mode=TwoWay}"
                         GroupName="StatusGroup"
                         Style="{StaticResource BlueRadioButtonStyle}"
                         Margin="10,0"/>

            <RadioButton Content="غير نشط"
                         IsChecked="{Binding IsInactive, ElementName=Root, Mode=TwoWay}"
                         GroupName="StatusGroup"  Margin="10,0"
                         Style="{StaticResource BlueRadioButtonStyle}"/>
        </StackPanel>
    </Grid>
</UserControl>
