<UserControl x:Class="AlkhabeerAccountant.CustomControls.SecondaryWindow.PlaceholderText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AlkhabeerAccountant.CustomControls.SecondaryWindow"
             mc:Ignorable="d" 
             x:Name="root"
             IsHitTestVisible="False"
             Opacity="0.5">

    <TextBlock Text="{Binding Placeholder, ElementName=root}"
               FontStyle="Italic"
               Foreground="#999"
               VerticalAlignment="Center"
               Margin="20,0,0,0"
               FontSize="{StaticResource FontSize-2}"
               Visibility="{Binding IsVisiblePlaceholder, ElementName=root, Converter={StaticResource BoolToVisibilityConverter}}"/>
</UserControl>
