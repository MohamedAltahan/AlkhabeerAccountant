<UserControl x:Class="AlkhabeerAccountant.CustomControls.MainWindow.TitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="40"
             MouseDown="move_MouseDown"
             MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"
             FlowDirection="RightToLeft">

    <UserControl.Resources>

        <!-- Generic TitleBar Buttons Style -->
        <Style x:Key="TitleBarButton" TargetType="Button">
            <Setter Property="Width" Value="70"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <!--  Hover and Press Colors -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#802196F3"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--  Special Style for Close Button -->
        <Style x:Key="CloseButtonStyle" TargetType="Button"  BasedOn="{StaticResource TitleBarButton}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E81123"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </UserControl.Resources>

    <!-- Layout Grid -->
    <Grid Background="{StaticResource TitleBarColor}">
        <Grid.ColumnDefinitions>
            <!-- App Title -->
            <ColumnDefinition Width="Auto"/>
            <!-- Center Search -->
            <ColumnDefinition Width="*"/>
            <!-- Control Buttons -->
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!--  App Title -->
        <TextBlock  Grid.Column="0"
                    Text="الخبير المحاسبي"
                    VerticalAlignment="Center"
                    Margin="20,0,0,0"
                    Foreground="White"
                    FontWeight="Bold"
                    FontSize="17"/>

        <!--  Centered Search Box -->
        <TextBlock Grid.Column="1"
                    
                    Text="الخبير المحاسبي"
                    VerticalAlignment="Center"
                    Margin="20,0,0,0"
                    Foreground="White"
                    FontWeight="Bold"
                    FontSize="17">

        </TextBlock>
        <!-- Control Buttons -->
        <StackPanel Orientation="Horizontal"
                        Grid.Column="2"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right">
            <Button Content="—"
                        Style="{StaticResource TitleBarButton}"
                        Click="MinimizeButton_Click" Height="40"/>
            <Button Content="▢"
                        Style="{StaticResource TitleBarButton}"
                        Click="MaximizeButton_Click" Height="39"/>
            <Button Content="✕"
                        Style="{StaticResource CloseButtonStyle}"
                        Click="CloseButton_Click" Height="38"/>
        </StackPanel>
    </Grid>

</UserControl>
