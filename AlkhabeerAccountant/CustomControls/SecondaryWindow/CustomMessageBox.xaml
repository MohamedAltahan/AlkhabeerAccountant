<Window x:Class="AlkhabeerAccountant.CustomControls.SecondaryWindow.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlkhabeerAccountant.CustomControls.SecondaryWindow"
        mc:Ignorable="d"
        Title="CustomMessageBox"         WindowStartupLocation="CenterOwner"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        Opacity="0">
    <Window.Triggers>
        <!-- Fade-in animation -->
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                     From="0" To="1"
                                     Duration="0:0:0.1" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Border CornerRadius="14"
            Style="{StaticResource MainCardBorderStyle}"
            Padding="25"
            Width="380"
            Background="White"
            BorderBrush="{StaticResource PrimaryBrush}"
            BorderThickness="3"
            Effect="{DynamicResource ShadowEffect}"
            FlowDirection="RightToLeft">

        <StackPanel>

            <!-- Header with Icon -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,15">
                <Image x:Name="IconImage"
                       Width="36" Height="36"
                       Margin="0,0,10,0"
                       Stretch="Uniform"/>
                <TextBlock x:Name="TitleText"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                           FontSize="16"
                           Foreground="red"/>
            </StackPanel>

            <!-- Message -->
            <TextBlock x:Name="MessageText"
                       TextWrapping="Wrap"
                       FontSize="25"
                       Foreground="Black"
                       Margin="0,0,0,20"
                       TextAlignment="Center"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                <Button x:Name="OkButton"
                        Content="موافق"
                        Style="{StaticResource GreenButtonStyle}"
                        Click="OkButton_Click"/>
                <Button x:Name="CancelButton"
                        Content="إلغاء"
                        Style="{StaticResource RedButtonStyle}"
                        Click="CancelButton_Click"
                        Visibility="Collapsed"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
