<UserControl x:Class="AlkhabeerAccountant.CustomControls.MainWindow.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             Height="Auto"
             Width="Auto"
             FlowDirection="RightToLeft">

    <UserControl.Resources>

        <!--  Base Colors -->
        <SolidColorBrush x:Key="MenuBackground" Color="#f4f4f4"/>
        <SolidColorBrush x:Key="MenuItemHover" Color="#E8F0FE"/>
        <SolidColorBrush x:Key="MenuItemPressed" Color="#D2E3FC"/>
        <SolidColorBrush x:Key="MenuBorder" Color="#FFA6A6FF"/>

        <!--  Icon Size -->
        <sys:Double x:Key="MenuIconSize">25</sys:Double>

        <!--  Menu Style -->
        <Style TargetType="Menu">
            <Setter Property="Background" Value="{StaticResource MenuBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource MenuBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- 📋 MenuItem Style (Rounded + Working Dropdowns) -->
        <Style TargetType="MenuItem">
            <Setter Property="Padding" Value="10,10"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#c2ddff"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Grid>
                            <!-- Main button area -->
                            <Border x:Name="Bd"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="6"
                                    Padding="{TemplateBinding Padding}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <!-- Icon -->
                                    <ContentPresenter x:Name="Icon"
                                                      ContentSource="Icon"
                                                      Margin="0,0,8,0"
                                                      VerticalAlignment="Center"/>
                                    <!-- Header text -->
                                    <ContentPresenter Grid.Column="1"
                                                      ContentSource="Header"
                                                      VerticalAlignment="Center"/>
                                </Grid>
                            </Border>

                            <!-- ✅ Popup for dropdown submenu -->
                            <Popup x:Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsSubmenuOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                  >
                                <Border Background="White"
                                        BorderBrush="#CCC"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        SnapsToDevicePixels="True" >
                                    <StackPanel IsItemsHost="True"
                                                KeyboardNavigation.DirectionalNavigation="Cycle"
                                                Margin="4"/>
                                </Border>
                            </Popup>
                        </Grid>

                        <!-- 🎯 Triggers -->
                        <ControlTemplate.Triggers>
                            <!-- Hover -->
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource MenuItemHover}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <!-- 🧭 Main Menu -->
    <Menu DockPanel.Dock="Top">

        <!-- الإعدادات -->
        <MenuItem Header="الإعدادات">
            <MenuItem.Icon>
