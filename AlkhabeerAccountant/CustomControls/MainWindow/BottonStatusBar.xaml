<UserControl x:Class="AlkhabeerAccountant.CustomControls.MainWindow.BottomStatusBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Height="35"
             FlowDirection="RightToLeft"
             Background="Transparent">

    <!-- 🔷 Gradient Background Matching Title Bar -->
    <Border CornerRadius="0">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#1B76CC" Offset="0"/>
                <GradientStop Color="#1560A8" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <!-- 🧭 Status Layout -->
        <Grid Margin="20,0" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Date/Time -->
                <ColumnDefinition Width="*"/>
                <!-- Spacer -->
                <ColumnDefinition Width="Auto"/>
                <!-- User Info -->
                <ColumnDefinition Width="Auto"/>
                <!-- Logout -->
            </Grid.ColumnDefinitions>

            <!-- 🕒 Login Date & Time -->
            <StackPanel Grid.Column="0"
                        Orientation="Horizontal"
                        VerticalAlignment="Center">
                <TextBlock Text="وقت الدخول:"
                           FontWeight="Bold"
                           Foreground="White"
                           FontSize="13"
                           Margin="0,0,6,0"/>
                <TextBlock x:Name="LoginDateTimeText"
                           Text="2025/10/13 11:32 ص"
                           Foreground="White"
                           FontSize="13"/>
            </StackPanel>

            <!-- 👤 User Info -->
            <StackPanel Grid.Column="2"
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Margin="15,0,15,0">
                <TextBlock Text="المستخدم:"
                           FontWeight="Bold"
                           Foreground="White"
                           FontSize="13"
                           Margin="0,0,5,0"/>
                <TextBlock x:Name="UserNameText"
                           Text="كريم"
                           Foreground="White"
                           FontSize="13"
                           Margin="0,0,10,0"/>
                <TextBlock Text="الدور:"
                           FontWeight="Bold"
                           Foreground="White"
                           FontSize="13"
                           Margin="0,0,5,0"/>
                <TextBlock x:Name="UserRoleText"
                           Text="مدير النظام"
                           Foreground="White"
                           FontSize="13"/>
            </StackPanel>

            <!-- 🚪 Logout Button -->
            <Button Grid.Column="3"
                    Content="تسجيل الخروج"
                    Height="24"
                    Width="130"
                    FontSize="14"
                    FontWeight="Bold"
                    Cursor="Hand"
                    Foreground="#1B76CC"
                    Background="White"
                    BorderThickness="0"
                    VerticalAlignment="Center"
                    Margin="10,0,0,0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>

                <!-- 🖱 Hover Effect -->
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                        <Setter Property="Background" Value="White"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E8F1FC"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#D8E6FB"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

        </Grid>
    </Border>
</UserControl>
