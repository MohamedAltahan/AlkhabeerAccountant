<UserControl x:Class="AlkhabeerAccountant.CustomControls.MainWindow.TitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="45"
             MouseDown="move_MouseDown"
             MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"
             FlowDirection="RightToLeft">

    <UserControl.Resources>

        <!-- 🔹 Generic TitleBar Button Style -->
        <Style x:Key="TitleBarButton" TargetType="Button">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontWeight" Value="ExtraBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <!-- 🎯 Hover and Press Colors -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#146EBE"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#0E4C8C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 🔴 Special Style for Close Button -->
        <Style x:Key="CloseButtonStyle" BasedOn="{StaticResource TitleBarButton}" TargetType="Button">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E81123"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#C50F1F"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </UserControl.Resources>

    <!-- 🟦 Title Bar Background -->
    <Border CornerRadius="0"  
            BorderBrush="#1A1A1A" 
            BorderThickness="0"
            SnapsToDevicePixels="True">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#1B76CC" Offset="0"/>
                <GradientStop Color="#1560A8" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <!-- ⚙️ Layout Grid -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- App Title -->
                <ColumnDefinition Width="*"/>
                <!-- Center Search -->
                <ColumnDefinition Width="Auto"/>
                <!-- Control Buttons -->
            </Grid.ColumnDefinitions>

            <!-- 🏷 App Title -->
            <TextBlock Text="الخبير المحاسبي"
                       VerticalAlignment="Center"
                       Margin="15,0,0,0"
                       Foreground="White"
                       FontWeight="Bold"
                       FontSize="15"/>

            <!-- 🔍 Centered Search Box -->
            <Border Grid.Column="1"
                    Width="300"
                    Height="28"
                    CornerRadius="6"
                    Background="White"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Padding="5,0">
                <DockPanel>
                    <TextBlock Text=""
                               FontFamily="Segoe MDL2 Assets"
                               Foreground="#888"
                               FontSize="16"
                               Margin="5,0"
                               VerticalAlignment="Center"/>
                    <Grid>
                        <TextBox x:Name="SearchBox"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 Foreground="#333"
                                 FontSize="14"
                                 VerticalContentAlignment="Center"
                                 KeyDown="SearchBox_KeyDown"
                                 TextChanged="SearchBox_TextChanged"/>
                        <TextBlock x:Name="SearchPlaceholder"
                                   Text="ابحث عن أي شيء في النظام"
                                   Foreground="#888"
                                   FontSize="14"
                                   Margin="8,0,0,0"
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False"
                                   Visibility="Visible"/>
                    </Grid>
                </DockPanel>
            </Border>

            <!-- 🧭 Control Buttons -->
            <StackPanel Orientation="Horizontal"
                        Grid.Column="2"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right">
                <Button Content="—"
                        Style="{StaticResource TitleBarButton}"
                        Click="MinimizeButton_Click"
                        Height="28"/>
                <Button Content="▢"
                        Style="{StaticResource TitleBarButton}"
                        Click="MaximizeButton_Click"
                        Height="28"/>
                <Button Content="✕"
                        Style="{StaticResource CloseButtonStyle}"
                        Click="CloseButton_Click"
                        Height="28"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
