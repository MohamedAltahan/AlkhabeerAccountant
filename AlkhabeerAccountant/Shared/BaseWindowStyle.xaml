<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"         
                    xmlns:wc="clr-namespace:System.Windows.Shell;assembly=PresentationFramework">


    <!--  Base style for all custom windows -->
    <Style x:Key="BaseWindowStyle" TargetType="Window">
        <Setter Property="ResizeMode" Value="NoResize"/>
        <Setter Property="Background" Value="White"/>

        <!-- Remove system padding and caption -->
        <Setter Property="wc:WindowChrome.WindowChrome">
            <Setter.Value>
                <wc:WindowChrome 
                CaptionHeight="0"
                ResizeBorderThickness="0"
                CornerRadius="15"
                GlassFrameThickness="30"
                UseAeroCaptionButtons="False"/>
            </Setter.Value>
        </Setter>
    </Style>

    <DropShadowEffect x:Key="DropShadow"
                      Color="#000000"
                      BlurRadius="10"
                      ShadowDepth="2"
                      Opacity="0.15"/>


</ResourceDictionary>