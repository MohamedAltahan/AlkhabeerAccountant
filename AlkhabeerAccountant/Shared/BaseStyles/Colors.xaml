<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Main Brand -->
    <Color x:Key="PrimaryColor">#146EBE</Color>
    <Color x:Key="PrimaryLightColor">#a8c5ff</Color>
    <Color x:Key="PrimaryDarkColor">#0D4C91</Color>

    <!-- Accent -->
    <Color x:Key="AccentColor">#F5B301</Color>

    <!-- Backgrounds -->
    <Color x:Key="CardBackgroundColor">#dbdbdb</Color>

    <!-- Text -->
    <Color x:Key="TextPrimaryColor">#1E293B</Color>
    <Color x:Key="TextSecondaryColor">#64748B</Color>

    <!-- Status -->
    <Color x:Key="SuccessColor">#16A34A</Color>
    <Color x:Key="WarningColor">#F59E0B</Color>
    <Color x:Key="ErrorColor">#DC2626</Color>
    <Color x:Key="InfoColor">#0EA5E9</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}" />
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}" />
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource PrimaryDarkColor}" />
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackgroundColor}" />


</ResourceDictionary>