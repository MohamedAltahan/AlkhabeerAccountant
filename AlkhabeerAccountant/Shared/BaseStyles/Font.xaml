<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"    >
    <!--==============Fonts==================-->
    <sys:Double x:Key="FontSize-1">13</sys:Double>
    <sys:Double x:Key="FontSize-2">15</sys:Double>
    <sys:Double x:Key="FontSize-3">17</sys:Double>
    <sys:Double x:Key="FontSize-4">19</sys:Double>
    <sys:Double x:Key="FontSize-5">21</sys:Double>
    <!--=============weight==-->
    <FontWeight x:Key="FontWeight-1">Normal</FontWeight>
    <FontWeight x:Key="FontWeight-2">Medium</FontWeight>
    <FontWeight x:Key="FontWeight-3">SemiBold</FontWeight>
    <FontWeight x:Key="FontWeight-4">Bold</FontWeight>
    <FontWeight x:Key="FontWeight-5">ExtraBold</FontWeight>


</ResourceDictionary>